article.breadcrumbs
    ul.breadcrumbs__list
        li.breadcrumbs__item: a(href="#").breadcrumbs__link Home
        li.breadcrumbs__item: a(href="#").breadcrumbs__link Haustiershop Marken
        li.breadcrumbs__item: a(href="#").breadcrumbs__link Warenkorb

article.progress-bar
    h1.progress-bar__header
        span SICHERE VERBINDUNG
    ul.progress-bar__list.df-c
        li.progress-bar__element.df-c.progress-bar__element--active.progress-bar__element--active-pass
            a(href="#").progress-bar__element-sub.df-cc
                span WARENKORB
        li.progress-bar__element.df-c.progress-bar__element--active.progress-bar__element--active-pass
            a(href="#").progress-bar__element-sub.df-cc
                span ANMELDEN
        li.progress-bar__element.df-c.progress-bar__element--active
            .active-border
            .progress-bar__element-sub.df-cc
                .progress-bar__element-number.df-cc
                    span 3
                span RECHNUNG & LIEFERUNG
        li.progress-bar__element.df-c
            .progress-bar__element-sub.df-cc
                span ZAHLUNG & BESTELLUNG
article.payment
    h3.payment__header
        span Bitte wählen Sie Zahlungsmethode aus
    .payment__wrapper
        ul.payment__list
            li.payment__element
                label(for="paypal").payment__label.df-c
                    .payment__image.df-c
                        img(src="/img/paypal-pay.png" alt="#").image
                    input(type="radio" name="payment" id="paypal").payment__input.input-radio-red
                    .label-for-radio
                    .payment__description
                        h6.payment__description-header
                            span PAYPAL
                        p.payment__description-text.
                            Sie werden auf die geschützte PayPal-Seite weitergeleitet um die Bezahlung abzuschließen
            li.payment__element
                label(for="sofort").payment__label.df-c
                    .payment__image.df-c
                        img(src="/img/sofort-pay.png" alt="#").image
                    input(type="radio" name="payment" id="sofort").payment__input.input-radio-red
                    .label-for-radio
                    .payment__description
                        h6.payment__description-header
                            span SOFORTÜBERWEISUNG
                        p.payment__description-text.
                            Sofortige und bequeme Zahlungsart für Online-Banking Nutzer.
            li.payment__element.df-c
                label(for="vorkasse").payment__label.df-c
                    .payment__image.df-c
                        img(src="/img/vorkasse-pay.png" alt="#").image
                    input(type="radio" name="payment" id="vorkasse").payment__input.input-radio-red
                    .label-for-radio
                    .payment__description
                        h6.payment__description-header
                            span VORKASSE
                        p.payment__description-text.
                            Einfache Überweisung über Ihre Hausbank
        .payment__buttons
            button(type="button").big-orange-btn.big-orange-btn--invert ANMELDEN
            button(type="button").big-orange-btn WEITER
