                    th(colspan="2") Artikel
                    th Lieferzeit
                    th(colspan="3") Einzelpreis
                tr.account-wishlist__content
                    td.account-wishlist__image
                        img(src="/img/product5.png" alt="#").image
                    td.account-wishlist__product-info
                        h3.account-wishlist__product-header
                            span Brit JUNIOR LARGE BREED 
                        .account-wishlist__product-article
