                                span ★★
                            .not-active
                                span ☆☆☆
                    td.account-wishlist__packedge
                        span Sofort versandfertig, Lieferzeit ca.
                        span 1-3 Werktage
                    td.account-wishlist__unit-price
                        span €12.00
