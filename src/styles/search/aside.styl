.aside-block
  width 295px
  &__header
    padding-top 25px
    color c_orange
    font-family r_med
    font-size 20px
.aside-nav
  width 100%
  margin 6px 0 35px 0
  &__element
    width 100%
    padding 20px 0
    &:last-of-type
      padding-bottom 0
  &__title
    position relative
    &:hover
      .main-arrow
        border-left-color c_orange
  &__header
    font-size 20px
    font-family r_med
    color c_orange
    padding 0 15px
  &-sub
    width 100%
    margin-top 10px
    border-top 3px solid c_lgray
    padding 25px 0 0 15px
    box-sizing border-box
    &__element
      margin-bottom 20px
      font-family r_reg
      font-size 16px
      & .aside-nav-sub__link
        transition all .2s ease
        &:hover
          color c_orange
      &:last-of-type
        margin-bottom 0
        & .aside-nav-sub__link
          position relative
          &:hover
            color c_orange
            .main-arrow
              border-left-color c_orange
          & .aside-nav-sub__all
            margin-right 20px
.main-arrow
  position absolute
  content ''
  top 20%
  right 0
  border-top 6px solid transparent
  border-left 6px solid c_black
  border-bottom 6px solid transparent
  transition all .2s ease
.aside-special-offers
  position relative
  background-color green
  height 335px
  margin-bottom 35px
  &__header
    position absolute
    content ''
    top 0
    width 100%
    padding 20px
    box-sizing border-box
    z-index 1
  &__percent
    height 75px
    width 75px
    background-color c_orange
    color white
    font-family r_med
    font-size 22px
    border-radius 50%
  &__text
    margin-left 10px
    font-family r_black
    font-size 32px
  &__info
    position absolute
    content ''
    bottom 0
    width 100%
    padding 20px
    box-sizing border-box
    z-index 1
    &-main
      font-family r_black
      font-size 20px
      margin-bottom 10px
    &-text
      font-family r_reg
      font-size 14px
      color c_gray
.aside-blog
  background-color red
  height 335px
  margin-bottom 35px
  &__image
    height 100%
    width 100%
.aside-registration
  height 335px
  margin-bottom 20px
  &__form
    position relative
    display flex
    flex-direction column
    justify-content space-between
    width 100%
    height 100%
    padding 20px
    box-sizing border-box
    border 3px solid c_orange
  &__header
    font-family r_bold
    font-size 28px
    color c_orange
  &__text
    font-family r_reg
    font-size 14px
    color c_gray
  &__input
    border 1px solid c_gray
    height 40px
    font-family r_reg
    font-size 14px
    color c_black
    padding 0 15px
    box-sizing border-box
    &::-webkit-input-placeholder
      color c_black
    &:-moz-placeholder
      color c_black
    &::-moz-placeholder
      color c_black
    &:-ms-input-placeholder
      color c_black
  &__button
    height 45px
    width 100%
    background-color c_orange
    border 1px solid c_orange
    border-radius 3px
    font-family r_bold
    font-size 18px
    color white
    transition all .2s ease
    &:hover
      background-color white
      color c_black
