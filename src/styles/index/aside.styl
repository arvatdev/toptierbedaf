.aside-block
  width 295px
  .aside-nav
    width 100%
    margin 6px 0 35px 0
    &__element
      width 100%
      padding 20px 0
      &:last-of-type
        padding-bottom 0
    &__title
      position relative
      &:hover
        .main-arrow
          border-left-color c_orange
    &__header
      font-size 20px
      font-family r_med
      color c_orange
      padding 0 15px
    .aside-nav-sub
      width 100%
      margin-top 10px
      border-top 3px solid c_lgray
      padding 25px 0 0 15px
      box-sizing border-box
      &__element
        margin-bottom 20px
        font-family r_reg
        font-size 16px
        & a
          transition all .2s ease
          &:hover
            color c_orange
        &:last-of-type
          margin-bottom 0
          & a
            position relative
            &:hover
              color c_orange
              .main-arrow
                border-left-color c_orange
            & span
              margin-right 20px
  &__header
    padding 25px 0 10px 15px
    border-bottom 3px solid c_lgray
    color c_orange
    font-family r_med
    font-size 20px
  &__navigation
    margin 30px 0 35px 15px
    &-element
      display block
      font-family r_reg
      font-size 16px
      margin-bottom 25px
      &:last-of-type
        margin-bottom 0
      & a
        transition all .2s ease
        &:hover
          color c_orange
      &--active
        color c_orange
        &>a
          color c_orange
  &__sub-navigation
    padding-top 20px
    padding-left 30px
    &-element
      display block
      font-family r_light
      font-size 14px
      margin-bottom 15px
      &:last-of-type
        margin-bottom 0
      & a
        transition all .2s ease
        &:hover
          color c_orange
      &--active
        color c_orange
        & a
          color c_orange
  .products__ad
    height 335px
    margin-bottom 35px
    position relative
    &:last-of-type
      margin-bottom 20px
    .ad-form
      display flex
      flex-direction column
      justify-content space-between
      height 100%
      width 100%
      padding 20px
      box-sizing border-box
      border 3px solid c_orange
      &__header
        font-family r_bold
        font-size 28px
        color c_orange
      &__text
        font-family r_reg
        font-size 14px
        color c_gray
      &__input
        border 1px solid c_gray
        height 40px
        font-family r_reg
        font-size 14px
        color c_black
        padding 0 15px
        box-sizing border-box
        &::-webkit-input-placeholder
          color c_black
        &:-moz-placeholder
          color c_black
        &::-moz-placeholder
          color c_black
        &:-ms-input-placeholder
          color c_black
      &__button
        height 45px
        width 100%
        background-color c_orange
        border 1px solid c_orange
        border-radius 3px
        font-family r_bold
        font-size 18px
        color white
        transition all .2s ease
        &:hover
          background-color white
          color c_black

    .header
      position absolute
      content ''
      top 0
      width 100%
      padding 20px
      box-sizing border-box
      z-index 1
      .percent
        height 75px
        width 75px
        background-color c_orange
        color white
        font-family r_med
        font-size 22px
        border-radius 50%
      .text
        margin-left 10px
        font-family r_black
        font-size 32px
    .info
      position absolute
      content ''
      bottom 0
      width 100%
      padding 20px
      box-sizing border-box
      z-index 1
      &__main
        font-family r_black
        font-size 20px
        margin-bottom 10px
      &__text
        font-family r_reg
        font-size 14px
        color c_gray
