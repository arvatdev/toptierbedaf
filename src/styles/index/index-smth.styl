.sub-info-block
  border-top 1px solid c_lgray
  &__element
    padding 0 25px 5px 25px
    box-sizing border-box
    border-bottom 1px solid c_lgray
  &__header
    margin 25px 0 20px 0
  &__arrow
    height 20px
    width 20px
    border-radius 50%
    background-color c_gray
    margin-right 15px
    cursor pointer
    transition all .3s ease
    & i
      color white
      transform rotate(270deg)
    &-active
      transform rotate(90deg)
      background-color c_orange
  &__font
    font-family r_med
    font-size 18px
    cursor pointer
  &__text
    display none
    font-family r_reg
    font-size 16px
    margin-bottom 20px
.pics-block-wrapper.mt-40-no-brd
  margin-top 40px
  border-top 0
.static-wrapper
  width 1050px
  margin 0 auto
  &-inform
    margin-top 35px
    text-align center
    font-family r_reg
    font-size 16px
  &-button
    margin 0 auto
    padding 40px 0 55px 0
    box-sizing border-box
    text-align center
    &-invert
      margin 0 auto
      padding 25px 0 55px 0
      box-sizing border-box
      text-align center
  &-large
    width 870px
    margin 0 auto
    .newsletter
      margin-top 5px
      padding 5px
      border-bottom 1px solid c_lgray
      &__label
        font-family r_reg
        font-size 14px
        & i
          font-size 18px
      &__info
        color c_gray
        font-family r_reg
        font-size 12px
  &-med
    width 830px
    margin 0 auto
    .links-block
      margin-top 35px
      padding-bottom 15px
    .link-wrapper
      width 48%
      margin-bottom 20px
    .link
      font-family r_reg
      font-size 18px
      color c_gray
      transition all .2s ease
      &:hover
        color c_orange
    .main-form__info-mark:first-of-type
      margin-top 10px
    .main-form__info-mark:last-of-type
      margin-top 5px
    .main-form__info-mark
      .label
        font-size 12px
        color c_gray
        &:before
          border 1px solid c_gray
      .input
        &:checked+label::before
          background-color c_gray
        &:checked+label::after
          color c_white


  &-small
    width 770px
    margin 0 auto
    &__choice
      margin-top 20px
    .main-form__info-mark
      display inline-block
      width 33%
    .main-block__header
      font-family r_reg
  .main-form__columns .column__input:last-of-type
    margin-bottom 0
.static-header
  width 100%
  text-align center
  margin-top 50px
  font-family r_med
  font-size 24px
.static-text
  display block
  width 100%
  margin-top 35px
  font-family r_reg
  font-size 16px
  line-height 20px
.static-column
  width 500px
  margin-bottom 40px
  &__bg-header1
    background url("/img/track.png") no-repeat left center
  &__bg-header2
    background url("/img/money.png") no-repeat left center
  &__bg-header3
    background url("/img/location.png") no-repeat left center
  &__text
    display block
    margin-bottom 15px
    font-family r_reg
    font-size 16px
    line-height 20px
    &:first-child
      margin-top 40px
  &__header-small
    display block
    margin-bottom 15px
    font-family r_bold
    font-size 16px
    line-height 20px
    &:first-child
      margin-top 40px
  .border-bottom
    border-bottom 1px solid c_black
  .static-blank
    border 1px solid c_mgray
    display inline-block
    margin 20px 35px 0 0
    position relative
    &__buttons
      position absolute
      top -1px
      overflow hidden
      right -35px
      background-color c_mgray
      padding 0 5px
      border-radius 0 5px 5px 0
    &__element
      border-bottom 1px solid white
      &:last-of-type
        border-bottom 0
    &__link
      margin 5px 0
      color white
      & i
        font-size 25px
        transition all .2s ease
        &:hover
          color c_orange
  .static__input-block
    margin 25px 0
  .main-block__header
    margin-top 40px
    &-pic
      margin-top 40px
  .static__input
    height 45px
    line-height 45px
    padding 0 20px
    box-sizing border-box
    font-family r_med
    font-size 24px
    border 1px solid c_mgray
    border-radius 2px
    width 25%
    text-align center
    &::-webkit-input-placeholder
      color c_black
      font-family r_med
      font-size 24px
    &:-moz-placeholder
      color c_black
      font-family r_med
      font-size 24px
    &::-moz-placeholder
      color c_black
      font-family r_med
      font-size 24px
    &:-ms-input-placeholder
      color c_black
      font-family r_med
      font-size 24px
  .static__input-small
    display inline-block
    flex 1
    height 45px
    line-height 45px
    padding 0 20px
    box-sizing border-box
    font-family r_reg
    font-size 16px
    border 1px solid c_mgray
    border-radius 0 2px 2px 0
    &::-webkit-input-placeholder
      color c_black
      font-family r_reg
      font-size 16px
    &:-moz-placeholder
      color c_black
      font-family r_reg
      font-size 16px
    &::-moz-placeholder
      color c_black
      font-family r_reg
      font-size 16px
    &:-ms-input-placeholder
      color c_black
      font-family r_reg
      font-size 16px
  .static__select-wrapper
    border-radius 2px
    overflow hidden
    width 65%
    .select2-dropdown
      border none
    .select2.select2-container.select2-container--default
      border-radius 2px
      overflow hidden
    .select-flag
      display block
      background-color c_mgray
      height 20px
      width 20px
      background c_mgray url("/img/flags/deu.png") no-repeat 7px
      background-size 20px
    .select2.select2-container.select2-container--default
      margin-bottom 0
      border-radius 0
      min-width 60px
    .select2-container--default .select2-selection--single
      padding 0
      height 45px
      box-sizing border-box
      border none
      border-radius 2px
      .select2-selection__rendered
        padding 4px 0 0 10px
        line-height 45px
        background-color c_mgray
      .select2-selection__arrow
        background-color c_mgray
        width 20px
        top 10px
        left 40px
        & b
          border-color c_black transparent transparent transparent
    .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
      border-color transparent transparent c_black transparent
