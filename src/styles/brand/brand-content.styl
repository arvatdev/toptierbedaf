.brand-sort
  &__header
    display block
    margin 25px 0 20px
    font-family r_bold
    font-size 18px
  &__text
    line-height 20px
    font-family r_reg
    font-size 14px
    margin-bottom 30px
  &__search-header
    display block
    font-family r_reg
    font-size 16px
    margin 25px 0 15px
  &__search-block
    background-color c_lgray
    padding 25px 35px
    box-sizing border-box
  &__input
    flex 1
    height 35px
    border-radius 3px 0 0 3px
    border 1px solid #d9d9d9
    border-right 0
    padding-left 15px
    box-sizing border-box
    font-family r_reg
    font-size 13px
    &::-webkit-input-placeholder
      color c_mgray
    &:-moz-placeholder
      color c_mgray
    &::-moz-placeholder
      color c_mgray
    &:-ms-input-placeholder
      color c_mgray
  &__button
    border 1px solid #d9d9d9
    border-left 0
    border-radius 0 3px 3px 0
    background-color c_orange
    color white
    font-family r_reg
    font-size 13px
    padding 0 25px
    box-sizing border-box
  &__letter
    margin 30px 0
    height 26px
    position relative
    &-link
      flex 1
      text-align center
      display inline-block
      margin 0 auto
      font-family r_reg
      font-size 20px
      color c_orange
      transition all .2s ease
      &:hover
        font-weight bold
        font-size 25px
  &__brands
    border-top 2px solid c_lgray
    position relative
  &__brands-letter
    position absolute
    top -14px
    left -5px
    padding 5px
    background-color white
    font-family r_reg
    font-size 14px
  &__list
    width 100%
    margin-top 20px
  &__element
    width 25%
    margin-bottom 20px
    &:last-of-type
      margin-right auto
  &__image
    height 85px
    margin-bottom 10px
  &__name
    text-align center
    font-family r_reg
    font-size 14px
    margin-bottom 15px
  &__list-button
    padding 0 30px
    min-height 30px
    color c_orange
    border 1px solid c_mgray
    border-radius 3px
    background-color white
    transition all .2s ease
    &:hover
      background-color c_orange
      border-color c_orange
      color white
  &__more
    margin 20px 0 40px
    &-button
      min-height 45px
      min-width 190px
      padding 0 20px
      box-sizing border-box
      border 1px solid c_orange
      border-radius 3px
      background-color c_orange
      color white
      font-family r_bold
      font-size 18px
      transition all .2s ease
      &:hover
        background-color white
        color c_black
