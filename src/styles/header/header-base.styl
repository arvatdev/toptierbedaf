.main-header
  position fixed
  top 0
  left 0
  right 0
  z-index 110
  height 70px
  background-color white
  &__contacts
    flex 1
    &-image
      height 35px
      width 35px
      border 1px solid c_lgray
      border-radius 50%
      color c_orange
      & i
        font-size 20px
    &-number
      font-size 14px
      margin 0 10px
    &-time
      font-size 14px
      margin 0 10px
      color c_orange
  &__account
    margin 0 15px
    &-image
      display inline-block
      height 20px
      width 20px
      background url("/img/account.svg") no-repeat center center
      &:hover
        background-image url("/img/account-active.svg")
  &__wishlist
    margin 0 15px
    &-image
      display inline-block
      height 20px
      width 20px
      background url("/img/whishlist.svg") no-repeat center center
      &:hover
        background-image url("/img/whishlist-active.svg")
  &__cart
    margin-left 10px
    &-image
      display inline-block
      margin 5px
      height 20px
      width 20px
      background url("/img/cart.svg") no-repeat center center
      transition all .2s ease
    &-price
      font-size 16px
      font-family r_bold
      transition all .2s ease
    &:hover
      & .main-header__cart-image
        background url("/img/cart-active.svg") no-repeat center center
      & .main-header__cart-price
        color c_orange

.account-popup
  position relative
  &__block
    position absolute
    right 0
    top 30px
    z-index 120
    box-shadow 0px 17px 18px 2px rgba(0,0,0,0.1)
    width 330px
    &::before
      content ''
      position absolute
      z-index 121
      top 0
      right 24px
      width 0
      height 0
      border-left 20px solid transparent
      border-right 20px solid transparent
      border-top 15px solid #ffffff
  &__button
    text-align right
    text-transform uppercase
    font-family r_bold
    font-size 16px
    background-color transparent
    border 0
    text-decoration none
    max-width 300px
    &:hover
      color c_orange
  &__icon
    vertical-align middle
    font-size 18px
    margin-left 10px
    position relative
    top -2px

.account-login
  &__form
    padding 23px
    background-color c_orange
  &__mail
    margin-bottom 10px
    &-label
      display none
  &__password
    margin-bottom 10px
    &-label
      display none
  &__input
    box-sizing border-box
    padding 0px 20px
    height 35px
    border-radius 3px
    font-size 14px
    width 100%
    border 0
  &__button
    width 100%
    border 0
    background-color #dddddd
    text-align center
    padding 10px
    box-sizing border-box
    border-radius 3px
    text-transform uppercase
    font-size 16px
    margin-bottom 15px
    font-family r_med
    color #474747
  &__recovery
    color #ffffff
    text-decoration underline
    font-size 12px
    border-radius 3px
  &__social
    padding 23px
    background-color #ffffff
    color #394b5d
    font-size 13px
    font-family r_med
    &-header
      text-transform uppercase
      display block
      margin-bottom 10px
.account-registration
  &__block
    padding 23px
    background-color #474747
    color #ffffff
    font-size 11px
  &__text
    margin-bottom 10px
    line-height 16px
  &__button
    display block
    box-sizing border-box
    text-align center
    background-color #ffcb03
    color #474747
    text-transform uppercase
    font-size 16px
    width 100%
    border-radius 3px
    padding 10px
    font-family r_med
