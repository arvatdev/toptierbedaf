.progress-bar
  margin 55px 0 0 0
  width 100%
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
    margin-bottom 40px
  &__list
    overflow hidden
    height 50px
    width 100%
    background-color c_mgray
    border-radius 4px
  &__description
    width 100%
    flex-wrap wrap
    margin-bottom 40px
    font-size 16px
    line-height 20px
    & .progress-bar__legend
      padding-left 0
      padding-right 0
      &::before
        left 0
  &__callback
    width 67%
    margin-right 5%
  &__address
    width 28%
  &__legend
    padding 10px 15px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    &::before
      content ''
      position absolute
      left 15px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__element
    height 100%
    position relative
    &--active
      background-color c_orange
      & .progress-bar__element-sub
        font-size 22px
        font-family r_med
    &--active-pass
      .progress-bar__element-sub
        font-size 18px
        font-family r_reg
    &:last-of-type
      .progress-bar__element-sub
        border-right none
    &-sub
      height 70%
      padding 0 50px
      text-align center
      color white
      font-size 18px
      font-family r_reg
      border-right 1px solid white
    &-number
      min-height 30px
      min-width 30px
      height 30px
      width 30px
      border-radius 50%
      background-color white
      color c_orange
      font-family r_bold
      font-size 18px
      margin 10px 10px 10px 0
    .active-border
      height 63px
      width 63px
      position absolute
      margin auto
      top 0
      bottom 0
      right -31px
      border-left 7px solid white
      border-bottom 7px solid white
      background-color c_orange
      transform rotateY(220deg) rotate(45deg)
.payment
  padding 25px 0 85px
  width 100%
  &__header
    font-family r_reg
    margin 0 0 50px 0
    font-size 18px
    padding-top 10px
    position relative
    &::before
      position: absolute
      content ''
      left 0
      top 0
      width 30px
      border-bottom 2px solid #f95318
  &__wrapper
    width 940px
    margin 0 auto
  &__list
    width 100%
    margin-bottom 40px
  &__element
    margin-bottom 5px
    width 100%
    &:last-child .payment__element-wrapper
      padding-bottom 0
    &-wrapper
      padding-bottom 20px
  &__label
    background-color rgba(255, 255, 255, 0)
    height 100%
    width 100%
    padding 10px 0
    border 2px solid  transparent
    &:hover
      border 2px solid  c_orange
  &__image
    height 50px
    width 150px
    min-height 50px
    justify-content flex-end
    &--small
      justify-content flex-start
      width 120px
  &__input+.label-for-radio
    margin 0 40px 0 30px
  &__description
    direction ltr
    width 643px
    &-header
      display block
      font-family r_bold
      font-size 16px
      margin-bottom 7px
    &-text
      display block
      font-family r_reg
      font-size 16px
      line-height 20px
  &__buttons
    margin-top 40px
    text-align center
    .big-orange-btn--invert
      margin-right 30px
