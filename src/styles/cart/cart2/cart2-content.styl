.progress-bar
  margin 55px 0 0 0
  width 100%
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
    margin-bottom 40px
  &__list
    overflow hidden
    height 50px
    width 100%
    background-color c_mgray
    border-radius 4px
  &__description
    width 100%
    flex-wrap wrap
    margin-bottom 40px
    font-size 16px
    line-height 20px
    & .progress-bar__legend
      padding-left 0
      padding-right 0
      &::before
        left 0
  &__callback
    width 67%
    margin-right 5%
  &__address
    width 28%
  &__legend
    padding 10px 15px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    &::before
      content ''
      position absolute
      left 15px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__element
    height 100%
    position relative
    &--active
      background-color c_orange
      & .progress-bar__element-sub
        font-size 22px
        font-family r_med
    &--active-pass
      .progress-bar__element-sub
        font-size 18px
        font-family r_reg
    &:last-of-type
      .progress-bar__element-sub
        border-right none
    &-sub
      height 70%
      padding 0 50px
      text-align center
      color white
      font-size 18px
      font-family r_reg
      border-right 1px solid white
    &-number
      min-height 30px
      min-width 30px
      height 30px
      width 30px
      border-radius 50%
      background-color white
      color c_orange
      font-family r_bold
      font-size 18px
      margin 10px 10px 10px 0
    .active-border
      height 63px
      width 63px
      position absolute
      margin auto
      top 0
      bottom 0
      right -31px
      border-left 7px solid white
      border-bottom 7px solid white
      background-color c_orange
      transform rotateY(220deg) rotate(45deg)
.form-block
  justify-content space-between
  flex-wrap wrap
  width 100%
  margin 40px 0 30px 0
  &__element
    width 510px
    &-header
      font-family r_reg
      font-size 18px
      margin-bottom 15px
.forms
  padding 35px 40px
  box-sizing border-box
  background-color c_lgray
  width 100%
  margin-bottom 30px
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-start
  &__label
    display flex
    align-items center
    justify-content space-between
    font-family r_reg
    font-size 16px
    margin 0 5px 5px 5px
    width 100%
    box-sizing border-box
    &-info
      font-family r_reg
      font-size 10px
      color c_gray
  &__input
    width 100%
    height 35px
    padding 0 20px
    box-sizing border-box
    margin-bottom 15px
    font-family r_reg
    font-size 16px
    border-radius 2px
    border none
  &__link
    font-family r_reg
    font-size 14px
    text-decoration underline
    margin-left 5px
  &__info
    width 100%
    color c_gray
    line-height 18px
    font-family r_reg
    font-size 12px
  &__subscribe
    margin-bottom 15px
    .label
      font-family r_reg
      font-size 14px
      line-height 13px
      position relative
      padding-left 30px
      &::before
        content ''
        position absolute
        left 0
        top 0
        width 13px
        height 13px
        box-sizing border-box
        border-radius 2px
        border 1px solid c_orange
        outline none
    .input
      display none
      &:checked+label:before
        background-color c_orange
      &:checked+label:after
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        font-size 14px
        line-height 13px
        content 'âœ“'
        color white
.social
  &__and
    font-family r_reg
    font-size 16px
    display inline-block
  &__link
    display inline-block
    height 42px
    width 42px
    transition all .2s ease
    &:hover
      -webkit-filter brightness(110%)
      filter brightness(110%)
