.big-orange-btn
  height 50px
  min-width 210px
  font-family r_bold
  font-size 18px
  color white
  background-color c_orange
  border 2px solid c_orange
  border-radius 3px
  transition all .2s ease
  &:hover
    background-color white
    color c_orange
  &--huge
    min-width 284px
    height 52px
    text-transform uppercase
  &--invert
    color c_orange
    background-color white
    border 2px solid c_orange
    border-radius 3px
    transition all .2s ease
    &:hover
      background-color c_orange
      color white
.label-for-checkbox
  font-size 0
  position relative
  width 13px
  height 13px
  display inline-block
  &::before
    content ''
    position absolute
    left 0
    top 0
    width 13px
    height 13px
    box-sizing border-box
    border-radius 2px
    text-align center
    border 1px solid c_orange
    outline none
    margin-right 20px
.input-red
  display none
  &:checked+label:before
    background-color c_orange
  &:checked+label:after
    position absolute
    top 1px
    left 1px
    width 13px
    height 13px
    font-size 14px
    line-height 13px
    content 'âœ“'
    color white

.label-for-radio
  font-size 0
  position relative
  width 16px
  height 16px
  &::before
    position absolute
    top 0
    left 0
    content ''
    display block
    width 12px
    height 12px
    border-radius 50%
    background-color transparent
    border 1px solid transparent
    box-shadow 0px 0px 0px 1px c_orange
.input-radio-red
  display none
  &:checked~.label-for-radio::after
    position absolute
    top 2px
    left 2px
    content ''
    display block
    width 10px
    height 10px
    border-radius 50%
    background-color c_orange
img
  max-width 100%
  height auto

.stars
  font-family 18px
  .active
    color c_yellow
  .not-active
    color c_gray
