.account
  &-menu
    width 175px
    padding-right 35px
    box-sizing border-box
    &__item
      margin-bottom 25px
    &__link
      text-transform uppercase
      color c_mgray
      font-size 14px
      font-family r_med
      &--active
        color c_orange
        font-size 18px
      &:hover
        color c_orange
  &__main-content
    width 924px
    align-items flex-start
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
    margin-bottom 30px
  &__sub-header
    padding 10px 15px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    font-family r_med
    &::before
      content ''
      position absolute
      left 15px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__form-table
    border 1px solid #a6a6a6
  &__wrapper
    padding 30px
  &__block-header
    background-color c_lgray
    padding 15px 30px
    padding-right 100px
    text-align right
    box-sizing border-box
    font-size 14px
  &__add-address
    color c_orange
    text-transform uppercase
    font-size 14px
    line-height 16px
    font-family r_reg
    text-decoration underline
    display inline-block
    &:hover
      text-decoration none
      & .material-icons
        color c_orange
    & .material-icons
      color c_black
      margin-left 20px
      display inline-block
      vertical-align middle
      font-size 19px
      margin-bottom 3px
  &__submit-block
    width 100%
    margin-bottom 40px
  &__ordering-block
    width 100%
    margin-bottom 30px
    &--half
      width 452px
.delivery
  &__item
    margin-bottom 20px
    &:last-child
      margin-bottom 0
  &__address
    width 220px
    font-size 14px
    line-height 21px
    padding-right 40px
    box-sizing border-box
    font-family r_reg
  &__btn
    width 118px
    display inline-block
    border 1px solid #727272
    padding 10px
    box-sizing border-box
    color #727272
    font-size 14px
    text-align center
    border-radius 3px
    &:hover
      background-color #727272
      color #fff
  &__left-block
    width 255px
  &__right-block
    width 160px
.account-data
  width 100%
  &__form
    padding 45px 72px
    box-sizing border-box
    width 100%
    margin-bottom 30px
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items flex-start
    background-color #ffffff
    border 1px solid #a6a6a6
  &__land
    .select2-dropdown
      border none
    .select2 .select2-selection--single
      background-color c_lgray
    .select2.select2-container.select2-container--default
      margin-bottom 20px
      border-radius 2px
      overflow hidden
    .select2-container--default .select2-selection--single
      height 35px
      padding 0 45px 0 20px
      box-sizing border-box
      border none
      border-radius 2px
      .select2-selection__rendered
        padding 0
        line-height 35px
        font-family r_reg
        font-size 16px
        color c_black
      .select2-selection__arrow
        height 100%
        width 40px
        background-color c_mgray
        border none
        top 0
        right 0
        & b
          border-color c_black transparent transparent transparent
    .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
      border-color transparent transparent c_black transparent
  &__phone
    .select2-dropdown
      border none
    .select2.select2-container.select2-container--default
      margin-bottom 20px
      border-radius 2px
      overflow hidden
    .select2-container--default .select2-selection--single
      height 35px
      padding 0 45px 0 20px
      box-sizing border-box
      border none
      border-radius 2px
      .select2-selection__rendered
        padding 0
        line-height 35px
        font-family r_reg
        font-size 16px
        color c_black
      .select2-selection__arrow
        height 100%
        width 40px
        background-color c_mgray
        border none
        top 0
        right 0
        & b
          border-color c_black transparent transparent transparent
    .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
      border-color transparent transparent c_black transparent
    .select-wrapper
      border-radius 2px
      overflow hidden
      margin-bottom 20px
      .js-cart-select3 ~ .select2.select2-container.select2-container--default
        border-radius 2px
      .select-flag
        display block
        background-color c_mgray
        height 20px
        width 20px
        background c_mgray url("/img/flags/deu.png") no-repeat 7px
        background-size 20px
      .select2.select2-container.select2-container--default
        margin-bottom 0
        border-radius 0
        min-width 60px
      .select2-container--default .select2-selection--single
        padding 0
        .select2-selection__rendered
          padding 4px 0 0 10px
          background-color c_mgray
        .select2-selection__arrow
          background-color c_mgray
          width 20px
          top 0
          left 40px
          & b
            border-color c_black transparent transparent transparent
          .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
            border-color transparent transparent c_black transparent
  &__column
    width 365px
    &-label
      display inline-block
      font-family r_reg
      font-size 16px
      margin 0 5px 5px 5px
      box-sizing border-box
      &-sub
        margin-bottom 7px
        padding 0 5px
        box-sizing border-box
        width 100%
        color c_gray
        font-family r_reg
        font-size 10px
    &-input
      width 100%
      height 35px
      padding 0 20px
      box-sizing border-box
      margin-bottom 15px
      font-family r_reg
      font-size 16px
      border-radius 2px
      border none
      background-color c_lgray
      &--border
        background-color transparent
        border 1px solid c_lgray
      &-pre
        margin-left 5px
        border-radius 2px 0 0 2px
        padding 0 10px
        background-color c_mgray
      &-sub
        margin-bottom 3px
      &-small
        display inline-block
        flex 1
        height 35px
        padding 0 20px
        box-sizing border-box
        font-family r_reg
        font-size 16px
        border none
        background-color c_lgray
    &-select
      width 100%
  &__sex
    margin-bottom 16px
    flex-wrap wrap
    &-header
      padding-left 5px
      box-sizing border-box
      width 100%
      display inline-block
      padding-right 20px
      margin-bottom 15px
    &-label
      font-family r_reg
      font-size 16px
      margin-right 15px
      position relative
      padding-left 20px
      &::before
        position absolute
        top 0
        left 0
        content ''
        display block
        width 12px
        height 12px
        border-radius 50%
        background-color transparent
        border 1px solid transparent
        box-shadow 0px 0px 0px 1px c_orange
    &-input
      display none
      &:checked+label::after
        position absolute
        top 2px
        left 2px
        content ''
        display block
        width 10px
        height 10px
        border-radius 50%
        background-color c_orange
  &__submit-block
    width 100%
