.account
  &-menu
    width 175px
    padding-right 35px
    box-sizing border-box
    &__item
      margin-bottom 25px
    &__link
      text-transform uppercase
      color c_mgray
      font-size 14px
      font-family r_med
      &--active
        color c_orange
        font-size 18px
      &:hover
        color c_orange
  &__main-content
    width 900px
    align-items flex-start
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
    margin-bottom 30px
  &__sub-header
    padding 10px 0px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    font-family r_med
    &::before
      content ''
      position absolute
      left 0px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__ordering-block
    width 100%
    margin-bottom 30px
    &--half
      width 452px
.payment
  width 940px
  margin 0 auto
  &--info-list
    width 100%
    & .payment__list
      margin-bottom 0
  .big-orange-btn.big-orange-btn--invert
    margin 0 30px 85px 238px
  &__list
    width 100%
    margin-bottom 40px
  &__wrapper
    padding-bottom 20px
  &__element
    margin-bottom 5px
    width 100%
    &:last-child .payment__wrapper
      padding-bottom 0
  &__status
    & .material-icons
      color #20a85e
      font-size 27px
  &__image
    height 50px
    width 150px
    min-height 50px
    justify-content flex-end
    &--small
      justify-content flex-start
      width 120px
  &__text
    direction ltr
    width 643px
    &-header
      display block
      font-family r_bold
      font-size 16px
      margin-bottom 7px
    &-content
      display block
      font-family r_reg
      font-size 16px
      line-height 20px
