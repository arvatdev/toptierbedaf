  position absolute
  top 0
  content ''
  width 100%
  padding 7px
  box-sizing border-box
  font-family r_black
  font-size 10px
  color c_black
  &__text
    position relative
    z-index 1
  &::before
    position absolute
    content ''
    top 0
    left 0
    border 15px solid transparent
    border-left 15px solid c_orange
    border-top 15px solid c_orange
  &--big
    padding 15px
    left 0
    &__text
      font-size 26px
    &::before
      border 35px solid transparent
      border-left 35px solid c_orange
      border-top 35px solid c_orange
