.raiting
  margin 20px 0 25px
  border-bottom 1px solid c_lgray
  &__header
    font-family r_med
    font-size 18px
    padding 15px 0
    position relative
    &::before
      position absolute
      content ''
      left 0
      top 0
      width 45px
      border-top 3px solid #f95318
  &__wrapper
    margin 20px 0 35px
  &__main
    width 120px
  &__image
    margin-bottom 10px
  &__number
    text-align center
    font-family r_reg
    font-size 37px
    margin-bottom 15px
  &__stars
    margin-bottom 5px
    text-align center
    .active
      font-size 12px
      color c_yellow
  &__total
    text-align center
    font-family r_reg
    font-size 14px
    color c_gray
  &__info
    width 610px
    &-text
      line-height 20px
      font-family r_reg
      font-size 14px
      &-small
        line-height 18px
        font-family r_reg
        font-size 12px
.stats
  margin 25px 0
  &--green
    width 0
    max-width 395px
    background-color #9ec153
    transition all 4s ease-out .2s
  &--lgreen
    width 0
    max-width 190px
    background-color #acd819
    transition all 4s ease-out .2s
  &--yellow
    width 0
    max-width 80px
    background-color #f2d800
    transition all 4s ease-out .2s
  &--orange
    width 0
    max-width 30px
    background-color #ffb31b
    transition all 4s ease-out .2s
  &--red
    width 0
    max-width 15px
    background-color #ff8b53
    transition all 4s ease-out .2s
  &__element
    margin-bottom 2px
  &__number
    font-family r_reg
    font-size 14px
    width 20px
  &__star
    font-family r_reg
    font-size 12px
    width 25px
    color c_gray
  &__length
    font-family r_reg
    font-size 14px
    box-sizing border-box
    height 17px
    padding-left 10px
.links-8in1
  padding-bottom 10px
  border-bottom 1px solid c_lgray
  margin-bottom 40px
  &__list
    padding 0 5px
  &__element-wrapper
    margin-bottom 20px
    width 340px
  &__elememnt
    display block
    position relative
    padding-right 15px
    font-family r_reg
    font-size 14px
    transition all .2s ease
    &:hover
      color c_orange
      .main-arrow
        border-left-color c_orange
.products-main
  margin-bottom 35px
  flex-direction column
  position relative
  &:last-of-type
    margin-bottom 20px
  &__prev
    position absolute
    content ''
    top 0
    right 30px
    height 15px
    width 15px
    border 1px solid c_lgray
    border-radius 3px
    cursor pointer
    transition all .2s ease
    &:hover
      border 1px solid c_gray
    & .material-icons
      color c_black
      font-size 18px
      font-weight bold
  &__next
    position absolute
    content ''
    top 0
    right 0
    height 15px
    width 15px
    border 1px solid c_lgray
    border-radius 3px
    cursor pointer
    transition all .2s ease
    &:hover
      border 1px solid c_gray
    & .material-icons
      color c_black
      font-size 18px
      font-weight bold
  &__header
    padding-right 50px
    box-sizing border-box
    font-family r_bold
    font-size 18px
    width 100%
  &__content
    margin-left 15px
    width 100%
  &__list
    flex 1
    overflow hidden
    margin-top 15px
    .slick-list
      height 302px
    .slick-track
      height 100%
  &__element
    position relative
    min-height 302px
    width 150px
    margin-right 56px
    margin-top 35px
    &:hover
      & .products-main__hover
        display block
    &:nth-child(4n)
      margin-right 0
      & .products-main__hover
        left -216px
        padding-right 8px
        width 216px
    &-visible
      width 100%
      min-height 302px
      display flex
      flex-direction column
      justify-content space-between
      position relative
    &-image
      height 120px
      min-height 120px
      width 100%
      text-align center
      margin-bottom 15px
    &-header
      width 100%
      font-family r_black
      font-size 14px
      margin-bottom 5px
    &-info
      font-family r_reg
      font-size 12px
      color c_gray
      margin-bottom 5px
    &-stars
      margin 5px 0
      & .stars-active
        font-size 14px
        color c_yellow
      & .stars-not-active
        font-size 14px
        color c_gray
    &-price
      font-family r_black
      font-size 18px
      margin-bottom 5px
    &-button
      height 35px
      font-family r_black
      font-size 14px
      color white
      background-color c_orange
      border 1px solid c_orange
      border-radius 2px
      transition all .2s ease
      &:hover
        background-color white
        color c_black
  &__hover
    display none
    position absolute
    top 0
    left 149px
    padding-left 8px
    box-sizing border-box
    height 100%
    width 208px
    z-index 2
    &-container
      flex-direction column
      height 100%
      width 100%
      padding 5px
      box-sizing border-box
      background-color c_lgray
    &-header
      margin-bottom 10px
    &-brand
      flex 1
      flex-wrap wrap
    &-buttons
      min-width 60px
      width 60px
      &-block
        flex-wrap wrap
      &-image
        margin-bottom 5px
        height 25px
        width 25px
        border 1px solid c_gray
        border-radius 2px
        color c_orange
        transition all .2s ease
        & .material-icons
          font-size 18px
        &:hover
          border 1px solid c_orange
    &-status
      &-block
        margin-top 5px
      &-header
        font-family r_reg
        font-size 12px
        color c_black
      &-info
        font-family r_reg
        font-size 12px
        color c_green
    &-info
      flex 1
      overflow-y scroll
      flex-wrap wrap
      &-block
        width 50%
        font-family r_med
        font-size 12px
        margin-bottom 10px
      &-block-big
        width 100%
        font-family r_med
        font-size 12px
        margin-bottom 5px
