.progress-bar
  margin 55px 0 0 0
  width 100%
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
.pass-form
  box-sizing border-box
  width 842px
  margin 40px auto 100px
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-start
  background-color #ffffff
  &__legend
    padding 10px 15px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    width 100%
    box-sizing border-box
    &::before
      content ''
      position absolute
      left 15px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__wrapper
    padding 35px 40px
    box-sizing border-box
    background-color c_lgray
    width 100%
    margin-bottom 30px
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items flex-start
  &__half
    width 362px
  &__label
    display flex
    align-items center
    justify-content space-between
    font-family r_reg
    font-size 16px
    margin 0 5px 5px 5px
    width 100%
    box-sizing border-box
    &-info
      font-family r_reg
      font-size 10px
      color c_gray
  &__input
    width 100%
    height 35px
    padding 0 20px
    box-sizing border-box
    margin-bottom 15px
    font-family r_reg
    font-size 16px
    border-radius 2px
    border none
    &--gray
      background-color c_lgray
    &--border
      background-color transparent
      border 1px solid c_lgray
  &__caption
    padding 0 15px
    margin-bottom 35px
    color #949494
    font-size 12px
    width 100%
  &__button
    justify-content center
    width 100%
