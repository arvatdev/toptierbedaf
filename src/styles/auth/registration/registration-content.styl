.progress-bar
  margin 55px 0 0 0
  width 100%
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
    margin-bottom 40px
.registration-form
  width 842px
  margin 0px auto 100px
  &__legend
    padding 10px 15px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    width 100%
    box-sizing border-box
    &::before
      content ''
      position absolute
      left 15px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__wrapper
    padding 35px 40px
    box-sizing border-box
    background-color c_lgray
    width 100%
    margin-bottom 30px
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items flex-start
  &__half
    width 362px
  &__label
    display flex
    align-items center
    justify-content space-between
    font-family r_reg
    font-size 16px
    margin 0 5px 5px 5px
    width 100%
    box-sizing border-box
    &-info
      font-family r_reg
      font-size 10px
      color c_gray
  &__input
    width 100%
    height 35px
    padding 0 20px
    box-sizing border-box
    margin-bottom 15px
    font-family r_reg
    font-size 16px
    border-radius 2px
    border none
    &--gray
      background-color c_lgray
    &--border
      background-color transparent
      border 1px solid c_lgray
  &__caption
    padding 0 15px
    margin-bottom 35px
    color #949494
    font-size 12px
    width 100%
  &__button
    justify-content center
    width 100%
  &__info-mark
    margin-bottom 25px
    font-family r_reg
    font-size 12px
    color #777
    width 100%
    .label
      font-family r_reg
      font-size 14px
      margin-right auto
      color c_black
      max-width 90%
      padding-left 25px
      box-sizing border-box
      position relative
      display inline-block
      &:before
        content ''
        position absolute
        left 0
        top 0
        width 13px
        height 13px
        box-sizing border-box
        border-radius 2px
        outline none
        border 1px solid c_orange
        display inline-block
        vertical-align middle
    .input
      display none
      &:checked+label::before
        background-color c_orange
      &:checked+label::after
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        font-size 14px
        line-height 13px
        content '✓'
        color white
  &__anrede
    width 100%
    .select2-dropdown
      border none
    .select2.select2-container.select2-container--default
      margin-bottom 20px
      border-radius 2px
      overflow hidden
    .select2-container--default .select2-selection--single
      height 35px
      padding 0 45px 0 20px
      box-sizing border-box
      border none
      border-radius 2px
      .select2-selection__rendered
        padding 0
        line-height 35px
        font-family r_reg
        font-size 16px
        color c_black
      .select2-selection__arrow
        height 100%
        width 40px
        background-color c_mgray
        border none
        top 0
        right 0
        & b
          border-color c_black transparent transparent transparent
    .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
      border-color transparent transparent c_black transparent
