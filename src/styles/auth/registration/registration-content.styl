      &-pre
        margin-left 5px
        border-radius 2px 0 0 2px
        padding 0 10px
        background-color c_mgray
      &-sub
        margin-bottom 3px
      &-small
        display inline-block
        flex 1
        height 35px
        padding 0 20px
        box-sizing border-box
        font-family r_reg
        font-size 16px
        border none
    &-select
