.static
  &__wrapper
    width 1050px
    margin 0 auto
  &__main-header
    width 100%
    text-align center
    margin-top 50px
    font-family r_med
    font-size 24px
.faq
  width 830px
  margin 0 auto
  &__nav
    margin-top 35px
    padding-bottom 15px
  &__item
    width 48%
    margin-bottom 20px
  &__link
    font-family r_reg
    font-size 18px
    color c_gray
    transition all .2s ease
    &:hover
      color c_orange
  &-drop
    width 100%
    border-top 1px solid c_lgray
    &__element
      padding 0 25px 5px 25px
      box-sizing border-box
      border-bottom 1px solid c_lgray
    &__header
      margin 25px 0 20px 0
    &__arrow
      height 20px
      width 20px
      border-radius 50%
      background-color c_gray
      margin-right 15px
      cursor pointer
      transition all .3s ease
      & i
        color white
        transform rotate(270deg)
      &-active
        transform rotate(90deg)
        background-color c_orange
    &__header-text
      font-family r_med
      font-size 18px
      cursor pointer
    &__text
      display none
      font-family r_reg
      font-size 16px
      margin-bottom 20px
  &-inform
    width 100%
    margin-top 35px
    margin-bottom 55px
    text-align center
    font-family r_reg
    font-size 16px
    &__text
      width 100%
      margin-bottom 25px
