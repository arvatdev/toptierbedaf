.static
  &__wrapper
    width 1050px
    margin 0 auto
    &-inform
      margin-top 35px
      text-align center
      font-family r_reg
      font-size 16px
    &-button
      width 100%
      margin 0 auto
      padding 40px 0 55px 0
      box-sizing border-box
      text-align center
      &-invert
        margin 0 auto
        padding 25px 0 55px 0
        box-sizing border-box
        text-align center
  &__main-header
    width 100%
    text-align center
    margin-top 50px
    font-family r_med
    font-size 24px
  &__main-text
    display block
    width 100%
    margin-top 35px
    font-family r_reg
    font-size 16px
    line-height 20px
  &__column
    width 500px
    margin-bottom 40px
    &-text
      display block
      margin-bottom 15px
      font-family r_reg
      font-size 16px
      line-height 20px
      &:first-child
        margin-top 40px
    &-header
      font-family r_med
      font-size 18px
      padding 15px 0
      position relative
      margin-top 40px
      &::before
        position absolute
        content ''
        left 0
        top 0
        width 45px
        border-top 3px solid #f95318
    &-small-header
      display block
      margin-bottom 15px
      font-family r_bold
      font-size 16px
      line-height 20px
      &:first-child
        margin-top 40px
.subscribe-form
  width 870px
  margin 40px auto 0px
  box-sizing border-box
  &__main-info
    padding 50px
    padding-bottom 40px
    margin-bottom 40px
    background-color c_lgray
    justify-content space-between
    flex-wrap wrap
  &__column
    width 365px
  &__label
    display inline-block
    font-family r_reg
    font-size 16px
    margin 0 5px 5px 5px
    box-sizing border-box
    &-sub
      margin-bottom 7px
      padding 0 5px
      box-sizing border-box
      width 100%
      color c_gray
      font-family r_reg
      font-size 10px
  &__input
    width 100%
    height 35px
    padding 0 20px
    box-sizing border-box
    margin-bottom 20px
    font-family r_reg
    font-size 16px
    border none
    border-radius 2px
    &-pre
      margin-left 5px
      border-radius 2px 0 0 2px
      padding 0 10px
      background-color c_mgray
    &-sub
      margin-bottom 3px
    &-small
      display inline-block
      flex 1
      height 35px
      padding 0 20px
      box-sizing border-box
      font-family r_reg
      font-size 16px
      border none
  &__sex
    margin 30px 5px 30px 5px
    flex-wrap wrap
    &-header
      display inline-block
      margin-right 20px
      font-family r_reg
      font-size 16px
    &-label
      font-family r_reg
      font-size 16px
      margin-right 15px
      position relative
      padding-left 20px
      &::before
        position absolute
        top 0
        left 0
        content ''
        display block
        width 12px
        height 12px
        border-radius 50%
        background-color transparent
        border 1px solid transparent
        box-shadow 0px 0px 0px 1px c_orange
    &-input
      display none
      &:checked+label::after
        position absolute
        top 2px
        left 2px
        content ''
        display block
        width 10px
        height 10px
        border-radius 50%
        background-color c_orange
  &__interest
    width 770px
    margin 0 auto
    &-wrapper
      margin-top 20px
    &-column
      width 33%
      margin-bottom 25px
      font-family r_reg
      font-size 12px
      color c_gray
    &-header
      font-family r_reg
      font-size 18px
      padding 15px 0
      position relative
      margin-top 40px
      &::before
        position absolute
        content ''
        left 0
        top 0
        width 45px
        border-top 3px solid #f95318
    &-label
      font-family r_reg
      font-size 14px
      margin-right auto
      color c_black
      max-width 90%
      padding-left 25px
      box-sizing border-box
      position relative
      display inline-block
      &:before
        content ''
        position absolute
        left 0
        top 0
        width 13px
        height 13px
        box-sizing border-box
        border-radius 2px
        outline none
        border 1px solid c_orange
        display inline-block
        vertical-align middle
    &-input
      display none
      &:checked+label::before
        background-color c_orange
      &:checked+label::after
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        font-size 14px
        line-height 13px
        content '✓'
        color white
  &__addition
    width 830px
    margin 0 auto
    &-column
      margin-bottom 25px
      font-family r_reg
      font-size 12px
      color c_gray
      width 100%
      &:first-of-type
        margin-top 10px
      &:last-of-type
        margin-top 5px
    &-label
      font-family r_reg
      font-size 12px
      color c_gray
      margin-right auto
      max-width 90%
      padding-left 25px
      box-sizing border-box
      position relative
      display inline-block
      &:before
        content ''
        position absolute
        left 0
        top 0
        width 13px
        height 13px
        box-sizing border-box
        border-radius 2px
        outline none
        border 1px solid c_gray
        display inline-block
        vertical-align middle
    &-input
      display none
      &:checked+label::before
        background-color c_gray
      &:checked+label::after
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        font-size 14px
        line-height 13px
        content '✓'
        color white
  &__newsletter
    width 870px
    margin 0 auto
    &-wrapper
      margin-top 5px
      padding 5px
      border-bottom 1px solid c_lgray
    &-label
      font-family r_reg
      font-size 14px
      &.material-icons
        font-size 18px
    &-info
      color c_gray
      font-family r_reg
      font-size 12px
