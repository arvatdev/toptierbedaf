.static
  &__wrapper
    width 1050px
    margin 0 auto
    &-inform
      margin-top 35px
      text-align center
      font-family r_reg
      font-size 16px
    &-button
      width 100%
      margin 0 auto
      padding 40px 0 55px 0
      box-sizing border-box
      text-align center
      &-invert
        margin 0 auto
        padding 25px 0 55px 0
        box-sizing border-box
        text-align center
    &-large
      width 870px
      margin 0 auto
      .newsletter
        margin-top 5px
        padding 5px
        border-bottom 1px solid c_lgray
        &__label
          font-family r_reg
          font-size 14px
          & i
            font-size 18px
        &__info
          color c_gray
          font-family r_reg
          font-size 12px
    &-med
      width 830px
      margin 0 auto
      .links-block
        margin-top 35px
        padding-bottom 15px
      .link-wrapper
        width 48%
        margin-bottom 20px
      .link
        font-family r_reg
        font-size 18px
        color c_gray
        transition all .2s ease
        &:hover
          color c_orange
      .main-form__info-mark:first-of-type
        margin-top 10px
      .main-form__info-mark:last-of-type
        margin-top 5px
      .main-form__info-mark
        .label
          font-size 12px
          color c_gray
          &:before
            border 1px solid c_gray
        .input
          &:checked+label::before
            background-color c_gray
          &:checked+label::after
            color c_white
    &-small
      width 770px
      margin 0 auto
      &__choice
        margin-top 20px
      .main-form__info-mark
        display inline-block
        width 33%
      .main-block__header
        font-family r_reg
  &__main-header
    width 100%
    text-align center
    margin-top 50px
    font-family r_med
    font-size 24px
  &__main-text
    display block
    width 100%
    margin-top 35px
    font-family r_reg
    font-size 16px
    line-height 20px
  &__column
    width 500px
    margin-bottom 40px
    &-text
      display block
      margin-bottom 15px
      font-family r_reg
      font-size 16px
      line-height 20px
      &:first-child
        margin-top 40px
    &-header
      font-family r_med
      font-size 18px
      padding 15px 0
      position relative
      margin-top 40px
      &::before
        position absolute
        content ''
        left 0
        top 0
        width 45px
        border-top 3px solid #f95318
    &-small-header
      display block
      margin-bottom 15px
      font-family r_bold
      font-size 16px
      line-height 20px
      &:first-child
        margin-top 40px
.main-form
  width 870px
  padding 50px
  margin 40px auto
  box-sizing border-box
  background-color c_lgray
  &--account
    margin-top 0
    padding 40px
    padding-bottom 15px
    width 840px
  &__submit-block
    width 100%
  &__info-mark
    margin-bottom 25px
    font-family r_reg
    font-size 12px
    color c_gray
    width 100%
    .label
      font-family r_reg
      font-size 14px
      margin-right auto
      color c_black
      max-width 90%
      padding-left 25px
      box-sizing border-box
      position relative
      display inline-block
      &:before
        content ''
        position absolute
        left 0
        top 0
        width 13px
        height 13px
        box-sizing border-box
        border-radius 2px
        outline none
        border 1px solid c_orange
        display inline-block
        vertical-align middle
    .input
      display none
      &:checked+label::before
        background-color c_orange
      &:checked+label::after
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        font-size 14px
        line-height 13px
        content 'âœ“'
        color white


  &__sex
    margin 0 5px 20px 5px
    flex-wrap wrap
    .header
      display inline-block
      margin-right 20px
      font-family r_reg
      font-size 16px
    .label
      font-family r_reg
      font-size 16px
      margin-right 15px
      position relative
      padding-left 20px
      &::before
        position absolute
        top 0
        left 0
        content ''
        display block
        width 12px
        height 12px
        border-radius 50%
        background-color transparent
        border 1px solid transparent
        box-shadow 0px 0px 0px 1px c_orange
    .input
      display none
      &:checked+label::after
        position absolute
        top 2px
        left 2px
        content ''
        display block
        width 10px
        height 10px
        border-radius 50%
        background-color c_orange
  &__columns
    justify-content space-between
    width 100%
    .column
      width 365px
      &--full-width
        width 100%
      &--third
        width 30%
        flex-direction column
      .main-form__sex
        margin-top 31px
        &--column
          margin 0
          margin-bottom 16px
          .header
            margin-left 5px
            width 100%
      .select-wrapper
        border-radius 2px
        overflow hidden
        margin-bottom 20px
        .js-cart-select3 ~ .select2.select2-container.select2-container--default
          border-radius 2px
        .select-flag
          display block
          background-color c_mgray
          height 20px
          width 20px
          background c_mgray url("/img/flags/deu.png") no-repeat 7px
          background-size 20px
        .select2.select2-container.select2-container--default
          margin-bottom 0
          border-radius 0
          min-width 60px
        .select2-container--default .select2-selection--single
          padding 0
          .select2-selection__rendered
            padding 4px 0 0 10px
            background-color c_mgray
          .select2-selection__arrow
            background-color c_mgray
            width 20px
            top 0
            left 40px
            & b
              border-color c_black transparent transparent transparent
            .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
              border-color transparent transparent c_black transparent
      &__label
        display inline-block
        font-family r_reg
        font-size 16px
        margin 0 5px 5px 5px
        box-sizing border-box
        &-sub
          margin-bottom 7px
          padding 0 5px
          box-sizing border-box
          width 100%
          color c_gray
          font-family r_reg
          font-size 10px
      &__input
        width 100%
        height 35px
        padding 0 20px
        box-sizing border-box
        margin-bottom 20px
        font-family r_reg
        font-size 16px
        border none
        border-radius 2px
        &-pre
          margin-left 5px
          border-radius 2px 0 0 2px
          padding 0 10px
          background-color c_mgray
        &-sub
          margin-bottom 3px
        &-small
          display inline-block
          flex 1
          height 35px
          padding 0 20px
          box-sizing border-box
          font-family r_reg
          font-size 16px
          border none
      &__select
        width 100%
        &--gray
          & + .select2 .select2-selection--single
            background-color c_lgray
      .select2-dropdown
        border none
      .select2.select2-container.select2-container--default
        margin-bottom 20px
        border-radius 2px
        overflow hidden
      .select2-container--default .select2-selection--single
        height 35px
        padding 0 45px 0 20px
        box-sizing border-box
        border none
        border-radius 2px
        .select2-selection__rendered
          padding 0
          line-height 35px
          font-family r_reg
          font-size 16px
          color c_black
        .select2-selection__arrow
          height 100%
          width 40px
          background-color c_mgray
          border none
          top 0
          right 0
          & b
            border-color c_black transparent transparent transparent
      .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
        border-color transparent transparent c_black transparent
