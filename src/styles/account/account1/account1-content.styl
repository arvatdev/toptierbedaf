.account
  &-menu
    width 175px
    padding-right 35px
    box-sizing border-box
    &__item
      margin-bottom 25px
    &__link
      text-transform uppercase
      color c_mgray
      font-size 14px
      font-family r_med
      &--active
        color c_orange
        font-size 18px
      &:hover
        color c_orange
  &__main-content
    width 924px
    align-items flex-start
  &__header
    width 100%
    text-align center
    font-family r_med
    text-transform uppercase
    font-size 24px
    margin-bottom 30px
  &__sub-header
    padding 10px 15px 18px
    position relative
    font-weight 400
    text-transform uppercase
    font-size 18px
    font-family r_med
    &::before
      content ''
      position absolute
      left 15px
      top -5px
      width 46px
      height 3px
      background-color #f95318
  &__block-header
    background-color c_lgray
    padding 15px 30px
    padding-right 100px
    text-align right
    box-sizing border-box
    font-size 14px
  &__show-all
    text-align center
    display inline-block
    color #fff
    background-color #a6a6a6
    border-radius 2px
    padding 10px 15px
    min-width 150px
    box-sizing border-box
    max-width 200px
    border none
    text-decoration none
    font-size 14px
    &:hover
      background-color c_gray
      transition all 0.2s ease
  &__form-header
    margin-bottom 20px
  &__form-title
    font-size 18px
    font-family r_med
    display inline-block
    vertical-align baseline
    margin-right 40px
  &__ordering-block
    width 100%
    margin-bottom 30px
    &--half
      width 452px
  &__ordering-footer
    background-color c_lgray
    padding 15px 30px
    box-sizing border-box
    justify-content flex-end
    border 1px solid #a6a6a6
    border-top 0
.delivery
  &__wrapper
    padding 30px
    border 1px solid #a6a6a6
    border-bottom 0
  &__item
    margin-bottom 20px
    &:last-child
      margin-bottom 0
  &__address
    width 220px
    font-size 14px
    line-height 21px
    padding-right 40px
    box-sizing border-box
    font-family r_reg
  &__btn
    width 118px
    display inline-block
    border 1px solid #727272
    padding 10px
    box-sizing border-box
    color #727272
    font-size 14px
    text-align center
    border-radius 3px
    &:hover
      background-color #727272
      color #fff
  &__left-block
    width 255px
  &__right-block
    width 160px
.order-details
  &__wrapper
    padding 30px
    border 1px solid #a6a6a6
    border-bottom 0
  &__item
    margin-bottom 8px
    font-size 14px
    &:last-child
      margin-bottom 0
  &__name
    margin-right 5px
    font-family r_bold
  &__value
    font-family r_reg
.payment
  width 100%
  margin 0 auto
  padding 30px
  border 1px solid #a6a6a6
  border-bottom 0
  box-sizing border-box
  &__account-wrapper
    width 100%
    & .payment__list
      margin-bottom 0
  .big-orange-btn.big-orange-btn--invert
    margin 0 30px 85px 238px
  &__list
    width 100%
    margin-bottom 40px
  &__element
    margin-bottom 5px
    width 100%
    &:last-child .payment__wrapper
      padding-bottom 0
  &__status
    & .material-icons
      color #20a85e
      font-size 27px
  &__label
    background-color rgba(255, 255, 255, 0)
    height 100%
    width 100%
    padding 10px 0
    border 2px solid  transparent
    &:hover
      border 2px solid  c_orange
  &__image
    height 50px
    width 150px
    min-height 50px
    justify-content flex-end
    &--small
      justify-content flex-start
      width 120px
  &__input+label
    margin 0 40px 0 30px
  &__text
    direction ltr
    width 643px
    &-content
      display block
      font-family r_reg
      font-size 16px
      line-height 20px
  &__wrapper
    padding-bottom 20px
.account-recent
  padding 0 30px
  border 1px solid #a6a6a6
  border-bottom 0
  &__table
    width 100%
  &__content
    text-align left
    vertical-align middle
    border-bottom 1px solid #a6a6a6
    &:last-child
      border 0
  &__image
    height 85px
    width 85px
    padding 10px 10px 10px 15px
    &--small
      text-align center
      & img
        width 45px
        height auto
  &__product
    &-info
      width 245px
      padding-left 25px
      padding-right 5px
    &-header
      width 100%
      font-family r_bold
      font-size 14px
      margin-bottom 5px
    &-article
      font-family r_reg
      font-size 12px
      margin-bottom 5px
  &__unit-price
    padding-right 5px
    box-sizing border-box
    width 100px
    font-family r_reg
    font-size 20px
  &__btn-buy
    width 110px
    background-color c_orange
    color #fff
    border-radius 3px
    text-align center
    padding 7px 10px
    box-sizing border-box
    font-size 14px
    text-decoration none
    border 2px solid #f95318
    &:hover
      background-color #fff
      color #f95318
      transition all 0.2s ease
  &__stars
    width 140px
    padding-right 10px
  &__to-cart
    vertical-align middle
  &__btn-to-cart
    width 150px
    background-color c_orange
    color #fff
    border-radius 3px
    text-align center
    padding 7px 10px
    box-sizing border-box
    font-size 14px
    text-decoration none
    border 2px solid #f95318
    &:hover
      background-color #fff
      color #f95318
      transition all 0.2s ease
