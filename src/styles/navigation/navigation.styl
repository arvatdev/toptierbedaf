.main-wrapper
  width 1100px
  margin 0 auto
  padding 0 10px
.main-navigation
  position fixed
  top 70px
  left 0
  right 0
  z-index 100
  height 70px
  background-color c_black
  &__sandwich
    height 100%
    width 70px
    background-color c_orange
    &:hover
      & .main-navigation__sandwich-icon
        font-size 36px
    &-icon
      font-size 35px
      color white
      transition all .2s ease
  &__list
    margin-right auto
  &__link
    font-family r_med
    font-size 16px
    color white
    transition all .2s ease
    &:hover
      color c_orange
  &__item
    padding 0 15px
    text-align center
    &:first-of-type
      padding-left 30px
  &__search
    &-image
      color white
      transition all .2s ease
      &:hover
        color c_orange
